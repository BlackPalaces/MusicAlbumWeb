@model IEnumerable<MusicAlbumWeb.MusicAlbum>

@{
    ViewBag.Title = "Index";
}
<style>
    table {
        width: 100%;
        text-align: center;
    }

    th, td {
        padding: 10px;
    }

    img {
        max-width: 100px;
        height: auto;
    }

    .containersearch {
        text-align: center;
    }

    .h2 {
        padding-top: 10px;
    }

    h2 {
        font-weight: bold;
        font-size: 2em;
        margin-top: 20px;
        font-style: italic;
    }
</style>



<h2 style="padding-top:10px;">MusicManager</h2>

<p style="padding-left:15px;">
	@Html.ActionLink("เพิ่มเพลงใหม่", "Create", null, new { @class = "btn btn-success" } )
</p>
<table class="table table-bordered ">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Musicname)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Artist)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Type)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Album)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Musicpic)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Hit)
		</th>
		<th>
			จัดการ
		</th>
	</tr>

@foreach (var item in Model) {
<tr>
	<td style="vertical-align: middle;">
		@Html.DisplayFor(modelItem => item.Musicname)
	</td>
	<td style="vertical-align: middle;">
		@Html.DisplayFor(modelItem => item.Artist)
	</td>
	<td style="vertical-align: middle;">
		@Html.DisplayFor(modelItem => item.Type)
	</td>
	<td style="vertical-align: middle;">
		@Html.DisplayFor(modelItem => item.Album)
	</td>
	<td style="vertical-align: middle;">
		<img src=@Url.Content("~/Content/images/"+(item.Musicpic)) style="width: 100px;height: auto" />
	</td>
	<td style="vertical-align: middle;">
		@Html.DisplayFor(modelItem => item.Hit)
	</td>
	<td style="vertical-align: middle;">
		@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
		@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
		@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
	</td>
</tr>
}

</table>
