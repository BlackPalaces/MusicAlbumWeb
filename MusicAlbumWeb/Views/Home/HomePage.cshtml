
@model IEnumerable<MusicAlbumWeb.MusicAlbum>

ViewBag.Title = "HomePage";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>YouTube Audio Player</title>
	<style>
		

		#search-bar {
			margin: 20px;
			display: flex;
			align-items: center;
		}

		#search-input {
			padding: 10px;
			width: 300px;
			font-size: 1em;
			color: #333; /* Text color in the input field */
			background-color: #f2f2f2; /* Light gray background */
			border: 2px solid #666; /* Dark gray border */
			border-radius: 5px; /* Rounded corners */
			margin-right: 10px; /* Spacing between input and button */
			outline: none; /* Remove default input focus outline */
		}

			#search-input:focus {
				border-color: #999; /* Darker border color on focus */
			}

		#search-button {
			padding: 10px;
			font-size: 1em;
			color: #FFFFFF;
			background-color: #666; /* Dark gray background */
			border: none;
			border-radius: 5px;
			cursor: pointer;
			transition: background-color 0.3s ease; /* Smooth transition on hover */
		}

			#search-button:hover {
				background-color: #444; /* Darker gray on hover */
			}

		h2 {
			font-weight: bold;
			font-size: 2em;
			margin-top: 20px;
			font-style: italic;
		}

		img {
			margin-right: 30px;
		}
		.thumbnail {
			background-color: transparent;
			width:fit-content;
			border:none;
		}
		.container {
		height:fit-content;
		}
		h2.a {
			text-shadow: 0 0 0.2em #87F, 0 0 0.2em #87F, 0 0 0.2em #87F;
		}
		h2.b {
			text-shadow: 0 0 0.2em #F87, 0 0 0.2em #F87
		}
	</style>
</head>
<body>

	<div id="search-bar">
		<input type="text" id="search-input" placeholder="Search...">
		<button id="search-button">Search</button>
	</div>
	<div>
		<h2 class="b">Top6 Charts Music</h2>
		<div class="container">
			@{
				var sortedModel = Model.OrderByDescending(m => m.Hit).ToList();
			}
			@for (var i = 1; i <= Math.Min(6, sortedModel.Count()); i++)
			{
				var indexItem = i - 1;
				if (i == 1 || i % 4 == 1)
				{
					@:<div class="row">
					}

					<div class="col-md-2" style="padding-left:25px;">
						<div class="thumbnail">
							<img class="img-responsive" style="max-width: 120%; height: 200px; object-fit: cover; object-position: center;"
								 src=@Url.Content("~/Content/images/" + (sortedModel.ElementAt(indexItem).Musicpic)) />
						</div>
					</div>

					if (i % 6 == 0 || i == Math.Min(6, sortedModel.Count()))
					{
					@:</div>
				}
			}
		</div>
	</div>
	<div>
		<h2 class="a">Popular</h2>
		<div class="container">
			@for (var i = 1; i <= Model.ToList().Count(); i++)
			{
				var indexItem = i - 1;
				if (i == 1 || i % 4 == 1)
				{
					@:<div class="row" >
					}

					<div class="col-md-2" style="padding-left:25px;">
						<div class="thumbnail">
							<img class="img-responsive" style="max-width: 120%; height: 200px; object-fit: cover; object-position: center;"
								 src=@Url.Content("~/Content/images/" + (Model.ElementAt(indexItem).Musicpic)) />
						</div>
					</div>

					if (i % 6 == 0)
					{
					@:</div>
				}
			}
		</div>
	</div>
	<h2>Music Genres</h2>
	<!-- Add your content for Music Genres here -->
	<br />
</body>
</html>

