
@{
	ViewBag.Title = "HomePage";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>YouTube Audio Player</title>
</head>
<body>
	<h2>ปุ้นกระโปกเปลื่อย</h2>

	<!-- Include the YouTube Iframe API -->
	<script src="https://www.youtube.com/iframe_api"></script>

	<!-- Create a container for the YouTube player -->
	<div id="player"></div>

	<!-- Script to create the YouTube player -->
	<script>
        // This function creates an <iframe> (and YouTube player) after the API code downloads
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player', {
                height: '360',
                width: '640',
                videoId: 'ef42hn1iSvQ',  // Replace with your YouTube video ID
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        // The API will call this function when the video player is ready
        function onPlayerReady(event) {
            // You can do things here if needed
        }

        // The API calls this function when the player's state changes
        function onPlayerStateChange(event) {
            // You can do things here if needed
        }
	</script>

</body>
</html>